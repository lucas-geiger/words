---
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts
    .filter((post) => !post.data.draft)
    .map((post) => ({
      params: { slug: post.id },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={post.data.description} />
    <title>{post.data.title} - Words</title>
    <style>
      :root {
        --max-width: 720px;
        --spacing: 2rem;
        --color-text: #1a1a1a;
        --color-text-muted: #666;
        --color-border: #e0e0e0;
        --color-accent: #2563eb;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
          sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        padding: var(--spacing);
        max-width: var(--max-width);
        margin: 0 auto;
      }

      header {
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--color-border);
      }

      header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
      }

      nav {
        display: flex;
        gap: 1.5rem;
      }

      nav a {
        text-decoration: none;
        color: var(--color-text);
        font-weight: 500;
        transition: color 0.2s;
      }

      nav a:hover {
        color: var(--color-accent);
      }

      article {
        margin-bottom: 4rem;
      }

      article header {
        border-bottom: none;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
      }

      article header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
        line-height: 1.2;
      }

      .post-meta {
        display: flex;
        gap: 1rem;
        align-items: center;
        font-size: 0.875rem;
        color: var(--color-text-muted);
        margin-bottom: 1rem;
      }

      .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .tag {
        padding: 0.25rem 0.75rem;
        background: #f5f5f5;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        color: var(--color-text-muted);
      }

      article :global(h2) {
        font-size: 1.75rem;
        font-weight: 600;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        letter-spacing: -0.01em;
      }

      article :global(h3) {
        font-size: 1.375rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
      }

      article :global(p) {
        margin-bottom: 1.5rem;
        line-height: 1.7;
      }

      article :global(ul),
      article :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
      }

      article :global(li) {
        margin-bottom: 0.5rem;
        line-height: 1.7;
      }

      article :global(strong) {
        font-weight: 600;
        color: var(--color-text);
      }

      article :global(code) {
        background: #f5f5f5;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
        font-family: 'Monaco', 'Courier New', monospace;
      }

      article :global(pre) {
        background: #f5f5f5;
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-bottom: 1.5rem;
      }

      article :global(pre code) {
        background: none;
        padding: 0;
      }

      article :global(blockquote) {
        border-left: 4px solid var(--color-border);
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        color: var(--color-text-muted);
        font-style: italic;
      }

      article :global(a) {
        color: var(--color-accent);
        text-decoration: none;
        transition: opacity 0.2s;
      }

      article :global(a:hover) {
        opacity: 0.8;
      }

      @media (max-width: 640px) {
        body {
          padding: 1rem;
        }

        header h1 {
          font-size: 1.5rem;
        }

        article header h1 {
          font-size: 2rem;
        }

        header {
          margin-bottom: 3rem;
        }

        article :global(h2) {
          font-size: 1.5rem;
        }

        article :global(h3) {
          font-size: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Words</h1>
      <nav>
        <a href={`${import.meta.env.BASE_URL}`}>Home</a>
        <a href={`${import.meta.env.BASE_URL}blog`}>All Posts</a>
      </nav>
    </header>

    <main>
      <article>
        <header>
          <h1>{post.data.title}</h1>
          <div class="post-meta">
            <time>
              {
                post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })
              }
            </time>
          </div>
          {
            post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )
          }
        </header>
        <Content />
      </article>
    </main>
  </body>
</html>
