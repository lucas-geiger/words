---
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts
    .filter((post) => !post.data.draft)
    .map((post) => ({
      params: { slug: post.id },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<!doctype html>
<html lang="en" class="bg-gray-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={post.data.description} />
    <title>{post.data.title} - Words</title>
    <script is:inline src="https://cdn.tailwindcss.com"></script>
    <script is:inline defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script is:inline>
      tailwind.config = {
        theme: {
          extend: {
            typography: {
              DEFAULT: {
                css: {
                  maxWidth: 'none',
                },
              },
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-white max-w-3xl mx-auto px-4 sm:px-8 lg:px-12 py-8 font-sans text-gray-900 leading-relaxed">
    <header class="mb-16 pb-8 border-b border-gray-300">
      <h1 class="text-3xl font-bold mb-6 tracking-tight">Words</h1>
      <nav class="flex gap-6">
        <a href={`${import.meta.env.BASE_URL}/`} class="font-medium text-gray-900 hover:text-blue-600 transition-colors">Home</a>
        <a href={`${import.meta.env.BASE_URL}/blog`} class="font-medium text-gray-900 hover:text-blue-600 transition-colors">All Posts</a>
      </nav>
    </header>

    <main>
      <article class="mb-16">
        <header class="pb-8 mb-8">
          <h1 class="text-4xl font-bold mb-4 tracking-tight leading-tight">{post.data.title}</h1>
          <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
            <time>
              {
                post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })
              }
            </time>
          </div>
          {
            post.data.tags.length > 0 && (
              <div class="flex gap-2 flex-wrap">
                {post.data.tags.map((tag) => (
                  <span class="px-3 py-1 bg-gray-100 rounded text-sm text-gray-600">{tag}</span>
                ))}
              </div>
            )
          }
        </header>
        <div class="prose prose-lg max-w-none prose-headings:font-semibold prose-headings:tracking-tight prose-h2:text-3xl prose-h2:mt-10 prose-h2:mb-4 prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-3 prose-p:mb-6 prose-p:leading-relaxed prose-a:text-blue-600 prose-a:no-underline hover:prose-a:opacity-80 prose-strong:font-semibold prose-strong:text-gray-900 prose-code:bg-gray-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:before:content-none prose-code:after:content-none prose-pre:bg-gray-100 prose-pre:p-6 prose-pre:rounded-lg prose-pre:overflow-x-auto prose-blockquote:border-l-4 prose-blockquote:border-gray-300 prose-blockquote:pl-6 prose-blockquote:italic prose-blockquote:text-gray-600 prose-ul:mb-6 prose-ul:pl-6 prose-ol:mb-6 prose-ol:pl-6 prose-li:mb-2 prose-li:leading-relaxed">
          <Content />
        </div>
      </article>
    </main>
  </body>
</html>
