---
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<!doctype html>
<html lang="en" class="bg-gray-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Words - A Blog About Writing and Building</title>
    <meta
      name="description"
      content="A minimalist blog about writing, building, and thinking out loud."
    />
    <script is:inline src="https://cdn.tailwindcss.com"></script>
    <script is:inline defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="bg-white max-w-3xl mx-auto px-4 sm:px-8 lg:px-12 py-8 font-sans text-gray-900 leading-relaxed">
    <header class="mb-16 pb-8 border-b border-gray-300">
      <h1 class="text-4xl font-bold mb-2 tracking-tight">Words</h1>
      <p class="text-lg text-gray-600 mb-6">A blog about writing, building, and thinking out loud.</p>
      <nav class="flex gap-6">
        <a href={`${import.meta.env.BASE_URL}/`} class="font-medium text-gray-900 hover:text-blue-600 transition-colors">Home</a>
        <a href={`${import.meta.env.BASE_URL}/blog`} class="font-medium text-gray-900 hover:text-blue-600 transition-colors">All Posts</a>
      </nav>
    </header>

    <main>
      <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
      {
        posts.length === 0 ? (
          <div class="text-center py-16 text-gray-600">
            <p>No posts yet. Check back soon!</p>
          </div>
        ) : (
          <ul class="flex flex-col gap-8">
            {posts.map((post) => (
              <li class="pb-8 border-b border-gray-300 last:border-b-0">
                <h3 class="text-2xl font-semibold mb-2">
                  <a href={`${import.meta.env.BASE_URL}/blog/${post.id}`} class="text-gray-900 hover:text-blue-600 transition-colors">{post.data.title}</a>
                </h3>
                <div class="text-sm text-gray-600 mb-3">
                  <time>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                </div>
                <p class="text-gray-600 leading-relaxed">{post.data.description}</p>
              </li>
            ))}
          </ul>
        )
      }
    </main>
  </body>
</html>
