---
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Words - A Blog About Writing and Building</title>
    <meta
      name="description"
      content="A minimalist blog about writing, building, and thinking out loud."
    />
    <style>
      :root {
        --max-width: 720px;
        --spacing: 2rem;
        --color-text: #1a1a1a;
        --color-text-muted: #666;
        --color-border: #e0e0e0;
        --color-accent: #2563eb;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
          sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        padding: var(--spacing);
        max-width: var(--max-width);
        margin: 0 auto;
      }

      header {
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--color-border);
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
      }

      .tagline {
        font-size: 1.125rem;
        color: var(--color-text-muted);
        margin-bottom: 1.5rem;
      }

      nav {
        display: flex;
        gap: 1.5rem;
      }

      nav a {
        text-decoration: none;
        color: var(--color-text);
        font-weight: 500;
        transition: color 0.2s;
      }

      nav a:hover {
        color: var(--color-accent);
      }

      main h2 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
      }

      .posts-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .post-item {
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--color-border);
      }

      .post-item:last-child {
        border-bottom: none;
      }

      .post-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .post-title a {
        text-decoration: none;
        color: var(--color-text);
        transition: color 0.2s;
      }

      .post-title a:hover {
        color: var(--color-accent);
      }

      .post-meta {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        margin-bottom: 0.75rem;
      }

      .post-description {
        color: var(--color-text-muted);
        line-height: 1.6;
      }

      .empty-state {
        text-align: center;
        padding: 4rem 0;
        color: var(--color-text-muted);
      }

      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      @media (max-width: 640px) {
        body {
          padding: 1rem;
        }

        h1 {
          font-size: 2rem;
        }

        header {
          margin-bottom: 3rem;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Words</h1>
      <p class="tagline">A blog about writing, building, and thinking out loud.</p>
      <nav>
        <a href={`${import.meta.env.BASE_URL}`}>Home</a>
        <a href={`${import.meta.env.BASE_URL}blog`}>All Posts</a>
      </nav>
    </header>

    <main>
      <h2>Recent Posts</h2>
      {
        posts.length === 0 ? (
          <div class="empty-state">
            <p>No posts yet. Check back soon!</p>
          </div>
        ) : (
          <ul class="posts-list">
            {posts.map((post) => (
              <li class="post-item">
                <h3 class="post-title">
                  <a href={`${import.meta.env.BASE_URL}blog/${post.id}`}>{post.data.title}</a>
                </h3>
                <div class="post-meta">
                  <time>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                </div>
                <p class="post-description">{post.data.description}</p>
              </li>
            ))}
          </ul>
        )
      }
    </main>

    <footer>
      <p>Built with Astro, Bun, and a love for simple workflows.</p>
    </footer>
  </body>
</html>
